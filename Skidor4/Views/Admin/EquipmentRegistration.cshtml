@model Skidor4.Models.equipment

@{
    ViewBag.Title = "Registrera";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.pk_id)
        @Html.HiddenFor(model => model.fk_chip_id)
        <div class="container s-table m-top-25">
            <div class="row s-table-head">
                <div class="col-md-3">Pistnamn</div>
            </div>
            <div class="row s-table-row">
                <div class="col-md-3">@Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })</div>
                <div class="col-md-12">
                    <div class="container">
                        <button class="btn btn-primary bg-dark" type="button" onclick="location.href='@Url.Action("Equipment")'">Tillbaka</button>
                        <button class="btn btn-primary bg-dark" type="submit">Spara</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
